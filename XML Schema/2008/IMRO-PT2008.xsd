		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="objectLabel.type">
		<xs:restriction base="xs:string">
			<xs:enumeration value=""/>
			<xs:enumeration value="artikel"/>
			<xs:enumeration value="bijlage"/>
